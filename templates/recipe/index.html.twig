{% extends 'base.html.twig' %}
{% block title %}
	Voici des recettes rapides
{% endblock %}

{% block body %}
	<ul>
		{% for recipe in recipes %}
			<li>
				<a href="{{path('recipe.show',{id:recipe.id,slug:recipe.slug})}}">{{recipe.title}}</a>
			</li>

		{% endfor %}

	</ul>

<p>Plus de {{totalTime}} min de recettes</p>
{% endblock %}
